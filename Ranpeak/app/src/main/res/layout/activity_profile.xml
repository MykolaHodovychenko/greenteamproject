<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:layout_margin="@dimen/text_small_margin">

    <ImageView
        android:id="@+id/user_image_view"
        style="@style/TextView"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="20pt" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="11dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/user__text_view"
                    style="@style/TextView"
                    android:layout_below="@id/user_image_view"
                    android:layout_marginTop="@dimen/text_small_margin"
                    android:text="@string/user_name"
                    tools:ignore="NotSibling"
                    android:textSize="9pt"/>

                <TextView
                    android:id="@+id/user_name_text_view"
                    style="@style/TextView"
                    android:layout_marginTop="@dimen/text_small_margin"
                    android:text="@string/user_name"
                    android:textSize="9pt"/>

                <TextView
                    android:id="@+id/user_age_text_view"
                    style="@style/TextView"
                    android:layout_below="@id/user_name_text_view"
                    android:layout_marginTop="7dp"
                    android:text="@string/user_age"
                    android:textSize="9pt"/>

                <TextView
                    android:id="@+id/user_country_text_view"
                    style="@style/TextView"
                    android:layout_below="@id/user_age_text_view"
                    android:layout_marginTop="@dimen/text_small_margin"
                    android:text="@string/user_country"
                    android:textSize="9pt"/>

                <TextView
                    android:id="@+id/user_gender_text_view"
                    style="@style/TextView"
                    android:layout_below="@id/user_country_text_view"
                    android:layout_marginTop="@dimen/text_small_margin"
                    android:text="@string/user_gender"
                    android:textSize="9pt"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="25pt">


                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nazar"
                    android:textColor="@color/color_Black"
                    android:textSize="11pt"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:text="18"
                    android:textColor="@color/color_Black"
                    android:textSize="11pt"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/age"
                    android:text="Ukraine"
                    android:textColor="@color/color_Black"
                    android:textSize="11pt"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/country"
                    android:text="male"
                    android:textColor="@color/color_Black"
                    android:textSize="11pt"
                    android:textStyle="italic" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
