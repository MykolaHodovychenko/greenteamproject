<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/design_default_color_primary_dark"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/IconInRegister"
        android:layout_width="80pt"
        android:layout_height="40pt"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="15pt"
        android:contentDescription="TODO"
       android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/registration_textView_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/registration_textView_username"
        android:textSize="@dimen/activity_vertical_margin_20"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="15dp"/>

    <!--<EditText-->
        <!--android:id="@+id/register_username"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:hint="@string/user_username"-->
        <!--android:maxLines="1"-->
        <!--android:singleLine="true"-->
        <!--android:layout_marginTop="15dp"/>-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/registration_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:hint="@string/user_username"
            android:imeActionLabel="@string/action_sign_in_short"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginTop="40dp"
            android:inputType="textEmailAddress"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/registration_button_4"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/next"
        android:textStyle="bold"
        android:onClick="clickRegistration_4"/>

</LinearLayout>
