<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:background="@color/colorPrimaryDark">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        card:cardElevation="2dp"
        card:cardUseCompatPadding="true"
        android:background="@color/colorPrimaryDark">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="4dp"
            android:background="@color/colorPrimaryDark">

            <ImageView
                android:id="@+id/profile_user"
                android:layout_width="37dp"
                android:layout_height="41dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                card:layout_constraintStart_toStartOf="parent"
                card:layout_constraintTop_toTopOf="parent"
                card:srcCompat="@drawable/ic_person_black_24dp" />

            <TextView
                android:id="@+id/headline"
                android:layout_width="264dp"
                android:layout_height="47dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="headline"
                android:textColor="@color/colorSecondaryLight"
                android:textSize="18dp"
                android:textStyle="italic"
                card:layout_constraintBottom_toBottomOf="parent"
                card:layout_constraintEnd_toEndOf="parent"
                card:layout_constraintHorizontal_bias="1.0"
                card:layout_constraintStart_toEndOf="@+id/profile_user"
                card:layout_constraintTop_toTopOf="parent"
                card:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/price"
                android:layout_width="64dp"
                android:layout_height="37dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="8dp"
                android:text="price"
                android:textColor="@color/colorSecondaryLight"
                android:textSize="27dp"
                card:layout_constraintBottom_toBottomOf="parent"
                card:layout_constraintEnd_toEndOf="parent"
                card:layout_constraintTop_toBottomOf="@+id/headline"
                card:layout_constraintVertical_bias="0.75" />

            <TextView
                android:id="@+id/subject"
                android:layout_width="115dp"
                android:layout_height="19dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="subject"
                android:textColor="@color/colorSecondaryLight"
                android:textSize="15dp"
                card:layout_constraintStart_toStartOf="parent"
                card:layout_constraintTop_toBottomOf="@+id/profile_user" />

            <TextView
                android:id="@+id/date"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="date"
                android:textColor="@color/colorSecondaryLight"
                card:layout_constraintStart_toStartOf="parent"
                card:layout_constraintTop_toBottomOf="@+id/subject" />
        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>