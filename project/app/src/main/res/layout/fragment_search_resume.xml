<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brightBackgroundColor"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fragment_search_resume_category_text"
        style="@style/TextView.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/category_name"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/fragment_search_resume_category_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/color_Black"
        app:layout_constraintTop_toBottomOf="@+id/fragment_search_resume_category_text"/>

    <TextView
        android:id="@+id/fragment_search_resume_country_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        style="@style/TextView.Primary"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:text="@string/country"
        app:layout_constraintTop_toBottomOf="@+id/fragment_search_resume_category_view"
        tools:layout_editor_absoluteX="61dp" />

    <View
        android:id="@+id/fragment_search_resume_country_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_Black"
        app:layout_constraintTop_toBottomOf="@+id/fragment_search_resume_country_text"
        android:layout_marginTop="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:paddingBottom="30dp">

        <Button
            android:id="@+id/fragment_search_resume_cancel_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_rounded_button"
            android:textColor="@color/brightBackgroundColor"
            android:text="@string/cancel"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/fragment_search_resume_apply_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_rounded_button"
            android:textColor="@color/brightBackgroundColor"
            android:textStyle="bold"
            android:text="@string/apply"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>