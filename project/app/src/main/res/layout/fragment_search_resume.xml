<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brightBackgroundColor"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_search_resume_category_text"
                style="@style/TextView.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/subject"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/fragment_search_resume_category_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/color_Black"
                app:layout_constraintTop_toBottomOf="@+id/fragment_search_resume_category_text" />

            <TextView
                android:id="@+id/fragment_search_resume_country_text"
                style="@style/TextView.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/country"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/fragment_search_resume_category_view"
                tools:layout_editor_absoluteX="61dp" />

            <View
                android:id="@+id/fragment_search_resume_country_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/color_Black"
                app:layout_constraintTop_toBottomOf="@+id/fragment_search_resume_country_text" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/fragment_search_resume_cancel_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/rectangle_rounded_button"
                android:text="@string/cancel"
                android:textColor="@color/brightBackgroundColor"
                android:textStyle="bold" />

            <Button
                android:id="@+id/fragment_search_resume_apply_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/rectangle_rounded_button"
                android:text="@string/apply"
                android:textColor="@color/brightBackgroundColor"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>